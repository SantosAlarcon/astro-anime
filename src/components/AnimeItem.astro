---
import {slide} from "astro:transitions"

const {anime} = Astro.props

// Se desestructura el objeto de anime en varias variables.
const {mal_id, title, images, year, studios, score} = anime;
---

<div id="anime-item" key={mal_id}>
    <a href={`/animes/${mal_id}`} title={title}>
        <img 
            src={images.webp.image_url}
            alt={title}
            transition:name={`poster-${mal_id}`}
        />
    </a>
    <h3>{title}</h3>
    <h6>{year} - {studios[0].name}</h6>
    <div class="score">
        ‚≠ê {score}
    </div>
</div>
<style>
    #anime-item {
        list-style: none;

        & img {
            height: 240px;
            transition: all .5s ease-in-out;
        }

        & img:hover {
            box-shadow: 0 0 1em #fff;
        }
    }

    .score {
            font-size: 15px;
        }

</style>
