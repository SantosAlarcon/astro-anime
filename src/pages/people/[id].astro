---
import Layout from "../../layouts/Layout.astro";
import PersonDetails from "../fragments/PersonDetails/index.astro"

const {id} = Astro.params

const response = await fetch(`https://api.jikan.moe/v4/people/${id}/full`).then(res => res.json())
const person_info = await response.data;
---
<Layout title={`Astro Anime - ${person_info.name}`}>
    <PersonDetails person_info={person_info} />
</Layout>
